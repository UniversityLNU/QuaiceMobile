<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity"
    android:background="#151515">

    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selector_layout"
        android:layout_centerVertical="true">
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:background="@color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_icon"
        android:layout_marginTop="32dp"
        android:text="Welcome back!"
        android:textSize="40dp"
        android:gravity="center"
        android:fontFamily="@font/rychard"
        android:textColor="@color/white"/>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/select_login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/app_title"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="32dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_gradient">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/select_register"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/select_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="25dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_gradient">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Register"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/aunth_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_margin="16dp"
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@android:color/transparent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back_arrow"
                    android:layout_marginRight="5dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

        <TextView
            android:id="@+id/aunth_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello! \n Let's begin!"
            android:textColor="@color/white"
            android:fontFamily="@font/rychard"
            android:textSize="40dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/aunth_title"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/full_name_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="25dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Full name"
                    android:background="@color/semi_white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/email_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="25dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Email"
                    android:background="@color/semi_white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/phone_number_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="25dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Phone number"
                    android:background="@color/semi_white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/password_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="25dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Pasword"
                    android:background="@color/semi_white"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/push_aunth"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@id/select_login"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_gradient">
                    <TextView
                        android:id="@+id/aunth_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="@color/white"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>