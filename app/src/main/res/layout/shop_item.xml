<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/open"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="32dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_lay">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rychard"
            android:textColor="@color/white"
            android:text="Pure Angel"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="120"
            android:ellipsize="end"
            android:text="We are raising 220 million hryvnias to reinforce 100 snipers for effective reconnaissance and hitting targets at a distance of more than 2 km."
            android:textColor="@color/white"
            android:textSize="20dp"/>



        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/open_review"
            android:layout_width="170dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_gradient">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="180"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:id="@+id/price"
                    android:layout_weight="0.5"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:layout_toRightOf="@+id/donut_text"
                    android:src="@drawable/donut"
                    android:layout_weight="1"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_below="@+id/open_review"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/third_white"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</RelativeLayout>