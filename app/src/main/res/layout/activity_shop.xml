<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShopReview"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:fontFamily="@font/rychard"
            android:textSize="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:id="@+id/profile_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/your_balance"
                android:text="Your Balance: 180"
                android:textSize="20dp"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/donut"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/image"
            android:layout_width="217dp"
            android:layout_height="187dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/def_image"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardtidge Case"
            android:fontFamily="@font/rychard"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description_filler"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/make_donat"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
                    <RelativeLayout
                        android:id="@+id/buy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_gradient">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2000"
                            android:gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:id="@+id/donut_text"
                            android:layout_marginLeft="10dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="5dp"
                            android:layout_toRightOf="@+id/donut_text"
                            android:src="@drawable/donut" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>